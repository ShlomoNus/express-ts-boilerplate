{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with Nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "runtimeArgs": ["--inspect"],
            "env": {
                "NODE_ENV": "dev"
            },
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
